= form_for @import_client do |f|
  -if @import_client.errors.any?
    #error_explanation
      %h2= "#{pluralize(@import_client.errors.count, "error")} prohibited this import_client from being saved:"
      %ul
        - @import_client.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :company_id
    = f.number_field :company_id
  .field
    = f.label :client_no
    = f.number_field :client_no
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :sort_key
    = f.text_field :sort_key
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :postal_code
    = f.text_field :postal_code
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :new
    = f.check_box :new
  .actions
    = f.submit 'Save'
