= form_for @activity_type do |f|
  -if @activity_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@activity_type.errors.count, "error")} prohibited this activity_type from being saved:"
      %ul
        - @activity_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
