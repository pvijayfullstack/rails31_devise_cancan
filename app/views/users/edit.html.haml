%h3= @user == @current_user ? t("general.your_account_settings") : t("general.edit_user")
 
= form_for(@user, :html => { :method => :put }) do |f|
  = errors_for(@user, "Opps, unable to add new user").html_safe
  = render :partial => 'user_fields', :locals => { :f => f }

  %p= f.label :password
  %p= f.password_field :password
 
  %p= f.label :password_confirmation
  %p= f.password_field :password_confirmation
 
  %p= f.label :current_password
  %p= f.password_field :current_password
 
  %p= f.submit t("general.update")
= link_to t("general.back"), :back
